<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Page6">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:paddingBottom="20dp"
        android:text="Check"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/speechbubble"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/checkscreen"
        />
    <TextView
        android:layout_width="342dp"
        android:layout_height="265dp"
        android:text="When a lesson is over the table will call for the check. After clicking on the
speech bubble you'll have four options: give the student a gift, thank the student, apologize to the
student, or ask the student for a lesson extension. If the student wants to extend the lesson you get
the opportunity to make more money off them. Giving students gifts can increase their satisfaction and
influence them to leave a positive review, which in turn can lead to more business. Thanking students
is similar to giving a gift except you don't have to pay for anything and you won't gain as many fans.
Apologizing is a good option at the end of a lesson if a student was unsatisfied with their service and
you want to avoid a negative review."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:layout_marginTop="189dp"
        android:layout_marginLeft="9dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginTop="492dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/leftarrow"
        android:id="@+id/page6previousbutton"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginTop="492dp"
        android:layout_marginLeft="321dp"
        android:rotation="180"
        android:background="@drawable/leftarrow"
        android:id="@+id/page6nextbutton"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="492dp"
        android:layout_marginLeft="168dp"
        android:fontFamily="cursive"
        android:text="6/9"
        android:textSize="18sp"
        android:textColor="@color/black"
        />
</FrameLayout>