<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TroubleActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/troublebackground"
        />
    <Button
        android:id="@+id/troublebutton"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="457dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/troublebutton1"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:text="Scold Teacher"
        android:textSize="10dp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        android:layout_marginTop="457dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />

    <Button
        android:id="@+id/troublebutton2"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/table"
        android:text="Give Apology Gift"
        android:textSize="10dp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />
    <Button
        android:id="@+id/troublebutton3"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginLeft="174dp"
        android:text="Protect Teacher"
        android:textSize="10dp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/troublebutton" />
    <Button
        android:id="@+id/troublebutton4"
        android:layout_width="114dp"
        android:layout_height="76dp"
        android:layout_marginLeft="174dp"
        android:layout_marginBottom="121dp"
        android:background="@drawable/table"
        android:text="Send Student Home"
        android:textSize="10dp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton3"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <View
        android:layout_width="254dp"
        android:layout_height="116dp"
        android:id="@+id/troublerectangle"
        android:background="@drawable/table"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="292dp"
        android:layout_marginLeft="45dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:id="@+id/troubleteacherarea"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/troublestudentarea"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintRight_toRightOf="@id/troublerectangle"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"/>
    <ProgressBar
        android:layout_width="36dp"
        android:layout_height="348dp"
        android:id="@+id/troublepartybar"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/verticalprogressbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="343dp"
        android:layout_marginTop="221dp"
        />
    <View
        app:layout_constraintTop_toTopOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="36dp"
        android:layout_height="3dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/statview"
        />
    <View
        app:layout_constraintBottom_toBottomOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="36dp"
        android:layout_height="3dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/statview"
        />
    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="100dp"
        android:progressDrawable="@drawable/healthprogress"
        android:indeterminateOnly="false"
        android:id="@+id/troublehealthbar"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/statview"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:text="HEALTH"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:id="@+id/troublehealthtext"
        app:layout_constraintRight_toLeftOf="@id/troublehealthbar"
        app:layout_constraintTop_toTopOf="@id/troublehealthbar"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:id="@+id/troublewealth"
        app:layout_constraintBottom_toBottomOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:layout_marginLeft="76dp"
        />
    <TextView
        android:layout_width="274dp"
        android:layout_height="39dp"
        android:id="@+id/troubletotalearnings"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:background="@drawable/totalblank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="cursive"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="LvL. 1"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:id="@+id/troublepartylevel"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="344dp"
        />
    <TextView
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:background="@drawable/moneybox"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:id="@+id/troubleroomearnings"
        android:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        android:layout_marginLeft="100dp"
        />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="263dp"
        android:layout_height="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/angrybubbles"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="158dp"
        />
    <TextView
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:id="@+id/troublesignal"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:paddingLeft="42dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="123dp"
        android:layout_marginBottom="118dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>