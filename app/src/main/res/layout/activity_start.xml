<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/startbackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/startbutton1"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="229dp"
        android:backgroundTint="#389CD9"
        android:fontFamily="cursive"
        android:text="Start"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startbutton2"
        android:layout_width="127dp"
        android:layout_height="69dp"
        android:layout_marginTop="106dp"
        android:backgroundTint="#389CD9"
        android:fontFamily="cursive"
        android:text="How to Play"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/startbutton1"
        app:layout_constraintTop_toTopOf="@id/startbutton1" />
    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/guide"
        android:visibility="invisible"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/redx"
        app:layout_constraintTop_toTopOf="@id/guide"
        app:layout_constraintRight_toRightOf="@id/guide"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/exitguide"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>