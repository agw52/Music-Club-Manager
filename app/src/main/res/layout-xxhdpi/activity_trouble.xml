<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TroubleActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/troublebackground"
        />
    <Button
        android:id="@+id/troublebutton"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="501dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/troublebutton1"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:text="Scold Teacher"
        android:textSize="10sp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        android:layout_marginTop="501dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />

    <Button
        android:id="@+id/troublebutton2"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/table"
        android:text="Give Apology Gift"
        android:textSize="10sp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />
    <Button
        android:id="@+id/troublebutton3"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_marginLeft="174dp"
        android:text="Protect Teacher"
        android:textSize="10sp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/troublebutton" />
    <Button
        android:id="@+id/troublebutton4"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_marginLeft="174dp"
        android:layout_marginBottom="133dp"
        android:background="@drawable/table"
        android:text="Send Student Home"
        android:textSize="10sp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton3"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:layout_width="254dp"
        android:layout_height="127dp"
        android:id="@+id/troublerectangle"
        android:background="@drawable/table"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="45dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/troubleteacherarea"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="33dp"/>
    <ImageView
        android:id="@+id/troublestudentarea"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintRight_toRightOf="@id/troublerectangle"
        android:layout_marginRight="50dp"
        android:layout_marginTop="33dp"/>
    <ProgressBar
        android:layout_width="36dp"
        android:layout_height="381dp"
        android:id="@+id/troublepartybar"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/verticalprogressbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="242dp"
        />
    <View
        app:layout_constraintTop_toTopOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="36dp"
        android:layout_height="3dp"
        android:layout_marginTop="127dp"
        android:background="@drawable/statview"
        />
    <View
        app:layout_constraintBottom_toBottomOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="36dp"
        android:layout_height="3dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/statview"
        />
    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="100dp"
        android:progressDrawable="@drawable/healthprogress"
        android:indeterminateOnly="false"
        android:id="@+id/troublehealthbar"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/statview"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:text="HEALTH"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:id="@+id/troublehealthtext"
        app:layout_constraintRight_toLeftOf="@id/troublehealthbar"
        app:layout_constraintTop_toTopOf="@id/troublehealthbar"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:id="@+id/troublewealth"
        app:layout_constraintBottom_toBottomOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="17sp"
        android:fontFamily="cursive"
        android:layout_marginLeft="77dp"
        android:layout_marginBottom="-2dp"
        />
    <TextView
        android:layout_width="274dp"
        android:layout_height="43dp"
        android:id="@+id/troubletotalearnings"
        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:textSize="23sp"
        android:fontFamily="cursive"
        android:background="@drawable/totalblank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="13dp"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="LvL. 1"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:fontFamily="cursive"
        android:id="@+id/troublepartylevel"
        android:layout_marginTop="213dp"
        android:layout_marginLeft="331dp"
        />
    <TextView
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:background="@drawable/moneybox"
        android:textAlignment="center"
        android:paddingTop="6dp"
        android:textSize="22sp"
        android:fontFamily="cursive"
        android:id="@+id/troubleroomearnings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        android:layout_marginLeft="100dp"
        />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="263dp"
        android:layout_height="83dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/angrybubbles"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="173dp"
        />
    <TextView
        android:layout_width="112dp"
        android:layout_height="99dp"
        android:id="@+id/troublesignal"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:paddingLeft="42dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="123dp"
        android:layout_marginBottom="127dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>