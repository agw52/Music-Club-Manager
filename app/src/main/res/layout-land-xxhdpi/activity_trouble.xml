<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TroubleActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/troublebackground"
        />
    <Button
        android:id="@+id/troublebutton"
        android:layout_width="125dp"
        android:layout_height="66dp"
        android:layout_marginLeft="427dp"
        android:layout_marginTop="114dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/troublebutton1"
        android:layout_width="125dp"
        android:layout_height="66dp"
        android:text="Scold Teacher"
        android:textSize="11sp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        app:layout_constraintTop_toTopOf="@id/troublebutton"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />

    <Button
        android:id="@+id/troublebutton2"
        android:layout_width="125dp"
        android:layout_height="66dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/table"
        android:text="Give Apology Gift"
        android:textSize="11sp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton"
        app:layout_constraintLeft_toLeftOf="@id/troublebutton"
        />
    <Button
        android:id="@+id/troublebutton3"
        android:layout_width="125dp"
        android:layout_height="66dp"
        android:layout_marginLeft="576dp"
        android:text="Protect Teacher"
        android:textSize="11sp"
        android:fontFamily="cursive"
        android:background="@drawable/table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/troublebutton" />
    <Button
        android:id="@+id/troublebutton4"
        android:layout_width="125dp"
        android:layout_height="66dp"
        android:layout_marginLeft="576dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/table"
        android:text="Send Student Home"
        android:textSize="11sp"
        android:fontFamily="cursive"
        app:layout_constraintTop_toBottomOf="@id/troublebutton3"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:id="@+id/troublerectangle"
        android:background="@drawable/table"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="91dp"/>
    <ImageView
        android:layout_width="77dp"
        android:layout_height="48dp"
        android:id="@+id/troubleteacherarea"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="26dp"/>
    <ImageView
        android:id="@+id/troublestudentarea"
        android:layout_width="77dp"
        android:layout_height="48dp"
        android:background="@drawable/newsquare"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintRight_toRightOf="@id/troublerectangle"
        android:layout_marginRight="55dp"
        android:layout_marginTop="26dp"/>
    <ProgressBar
        android:layout_width="39dp"
        android:layout_height="303dp"
        android:id="@+id/troublepartybar"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/verticalprogressbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="724dp"
        android:layout_marginTop="45dp"
        />
    <View
        app:layout_constraintTop_toTopOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="39dp"
        android:layout_height="3dp"
        android:layout_marginTop="101dp"
        android:background="@drawable/statview"
        />
    <View
        app:layout_constraintBottom_toBottomOf="@id/troublepartybar"
        app:layout_constraintLeft_toLeftOf="@id/troublepartybar"
        android:layout_width="39dp"
        android:layout_height="3dp"
        android:layout_marginBottom="101dp"
        android:background="@drawable/statview"
        />
    <ProgressBar
        android:layout_width="164dp"
        android:layout_height="13dp"
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="151dp"
        android:progressDrawable="@drawable/healthprogress"
        android:indeterminateOnly="false"
        android:id="@+id/troublehealthbar"
        />
    <TextView
        app:layout_constraintTop_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="164dp"
        android:layout_height="13dp"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="151dp"
        android:background="@drawable/statview"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:text="HEALTH"
        android:textColor="@color/white"
        android:fontFamily="cursive"
        android:id="@+id/troublehealthtext"
        app:layout_constraintRight_toLeftOf="@id/troublehealthbar"
        app:layout_constraintTop_toTopOf="@id/troublehealthbar"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-2dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:id="@+id/troublewealth"
        app:layout_constraintBottom_toBottomOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="@id/troublerectangle"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="cursive"
        android:layout_marginLeft="89dp"
        android:layout_marginBottom="-4dp"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:id="@+id/troubletotalearnings"
        android:paddingLeft="3dp"
        android:paddingTop="2dp"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:background="@drawable/totalblank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="493dp"
        android:layout_marginTop="3dp"
        />
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="15dp"
        android:layout_height="83dp"
        android:text="LvL. 1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="cursive"
        android:id="@+id/troublepartylevel"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="764dp"
        />
    <TextView
        android:layout_width="158dp"
        android:layout_height="33dp"
        android:background="@drawable/moneybox"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:textSize="22sp"
        android:fontFamily="cursive"
        android:id="@+id/troubleroomearnings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        android:layout_marginLeft="151dp"
        />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="288dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/angrybubbles"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="87dp"
        />
    <TextView
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:id="@+id/troublesignal"
        app:layout_constraintBottom_toTopOf="@id/troublerectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="102dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>